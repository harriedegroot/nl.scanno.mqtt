{
   "id": "nl.scanno.mqtt",
   "name": {
      "en": "MQTT Client",
      "nl": "MQTT Client"
   },
   "description": {
      "en": "Subscripe to MQTT topics",
      "nl": "Abonneer op MQTT topics"
   },
   "version": "2.2.3",
   "sdk": 2,
   "compatibility": ">=1.5.0",
   "category": [
      "internet"
   ],
   "permissions": [
       "homey:manager:speech-output"
   ],
   "author": {
      "name": "Menno van Grinsven",
      "email": "mgrinsven@gmail.com"
   },
   "contributors": {
      "developers": [
        {
          "name": "Menno van Grinsven",
          "email": "mgrinsven@gmail.com"
        },
        {
            "name": "Harrie de Groot",
            "email": "harriedegroot@gmail.com"
        }
      ]
   },
   "contributing": {
		"donate": {
			"paypal": {
				"username": "scanno"
			}
		}
	},
   "images":{
      "large":"./assets/images/large.jpg",
      "small":"./assets/images/small.jpg"
   },
   "flow": {
      "triggers": [
         {
            "id": "eventMQTT",
            "title": {
               "en": "Receive topic triggers",
               "nl": "Ontvang topic triggers"
            },
            "tokens": [
               {
                  "name": "message",
                  "title": {
                     "en": "Message received from topic",
                     "nl": "Bericht ontvangen via topic"
                  },
                  "example": "Received message"
               },
               {
                  "name": "topic",
                  "title": {
                     "en": "Name Topic",
                     "nl": "Naam Topic"
                  },
                  "example": "broker/+/something/#"
               }
            ],
            "args":[
	       {
	          "name": "mqttTopic",
                  "type": "text",
                  "placeholder": {
                     "en": "Topic",
                     "nl": "Topic"
                  }
	       }
            ]
         }
      ],
      "actions": [
         {
            "id": "publishMQTT",
            "title": {
               "en": "Publish message",
               "nl": "Stuur bericht"
            },
            "args":[
               {
                  "name": "mqttMessage",
                  "type": "text",
                  "placeholder": {
                     "en": "Message",
                      "nl": "Bericht"
                  }
               },
               {
                  "name": "mqttTopic",
                  "type": "text",
                  "placeholder": {
                     "en": "Topic",
                     "nl": "Topic"
                  }
               }
            ]
         },
         {
            "id": "publishMQTT_Adv",
            "title": {
               "en": "Publish message (advanced)",
               "nl": "Stuur bericht (uitgebreid)"
            },
            "args":[
               {
                  "name": "mqttMessage",
                  "type": "text",
                  "placeholder": {
                     "en": "Message",
                      "nl": "Bericht"
                  }
              },
              {
                 "name": "mqttTopic",
                 "type": "text",
                 "placeholder": {
                    "en": "Topic",
                    "nl": "Topic"
                 }
              },
              {
                 "name": "qos",
                 "type": "dropdown",
                 "title": {
                    "en": "Quality of Service",
                    "nl": "Quality of Service"
                 },
                 "values": [
                    {
                       "id": "0",
                       "label": {
                          "en": "QoS 0",
                          "nl": "QoS 0"
                       }
                    },
                    {
                       "id": "1",
                       "label": {
                          "en": "QoS 1",
                          "nl": "QoS 1"
                       }
                    },
                    {
                       "id": "2",
                       "label": {
                          "en": "QoS 2",
                          "nl": "QoS 2"
                       }
                    }
                 ]
              },
              {
                 "name": "retain",
                 "type": "dropdown",
                 "title": {
                    "en": "Use retain",
                    "nl": "Gebruik retain"
                 },
                 "values": [
                    {
                       "id": "0",
                       "label": {
                          "en": "False",
                          "nl": "False"
                       }
                    },
                    {
                       "id": "1",
                       "label": {
                          "en": "True",
                          "nl": "True"
                       }
                    }
                  ]
              }
            ]
         },
         {
            "id": "sayString",
            "title": {
               "en": "Say the received string through homeys speaker",
               "nl": "Speel de ontvangen string af via homys interne speaker"
            },
            "args": [
               {
                  "name": "voiceString",
                  "type": "text",
                  "placeholder": {
                     "en": "Received string",
                     "nl": "Ontvangen string"
                  }
               }
            ]
         }
      ]
   }
}
